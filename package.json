{
  "name": "transform-case",
  "displayName": "Translation and Transform Case - XXC",
  "description": "",
  "version": "1.0.3",
  "publisher": "xxc",
  "license": "MIT",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/X-X-X-X-X-X-X-X-X-X-X-X-X/vscode-transfrom-case.git"
  },
  "contributes": {
    "configuration": {
      "title": "Transform Case Settings",
      "properties": {
        "transform-case.current": {
          "type": "string",
          "description": "Translation services currently in use(Do not change the values manually)"
        },
        "transform-case.sourceLanguage": {
          "type": "string",
          "default": "auto",
          "description": "Translate the source language"
        },
        "transform-case.targetLanguage": {
          "type": "string",
          "default": "en",
          "description": "Translate the target language"
        }
      }
    },
    "commands": [
      {
        "command": "transform-case.transform",
        "title": "Transform Case"
      },
      {
        "command": "transform-case.transformWithTranslate",
        "title": "Translate and Transform Case"
      },
      {
        "command": "transform-case.translateConfig",
        "title": "Translate Api Config"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "transform-case.transform",
          "group": "1_modification",
          "when": "editorHasSelection"
        },
        {
          "command": "transform-case.transformWithTranslate",
          "group": "1_modification",
          "when": "editorHasSelection"
        }
      ]
    }
  },
  "scripts": {
    "compile": "node auto-load.js && npm run check-types && node esbuild.js",
    "check-types": "tsc --noEmit",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "vscode:prepublish": "npm run package",
    "package": "node auto-load.js && npm run check-types && node esbuild.js --production"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.11",
    "eslint": "^9.36.0",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@alicloud/alimt20181012": "^1.4.1",
    "change-case": "^5.4.4"
  }
}